{
  "manifest_version": 3,
  "name": "Trello Markdown Editor",
  "version": "1.0.0",
  "description": "Replace Trello's rich text editor with a plain markdown textarea",
  "permissions": [],
  "host_permissions": [
    "https://trello.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://trello.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
